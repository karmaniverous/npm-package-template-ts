/**
 * REQUIREMENTS
 * 1) `npm run typecheck` must NOT report errors from dependency declarations in `node_modules`.
 * 2) The project must support modern ECMAScript features used in this repo:
 *    - Top-level `await` in `rollup.config.ts`.
 *    - RegExp named capture groups in `src/util/packageName.ts`.
 * 3) Keep ESM-friendly bundler settings; TypeScript runs in type-checking mode only (no emit).
 * 4) Provide Node and Vitest globals during type-checks.
 */
{
  "compilerOptions": {
    // [req-2] Enable modern JS features (top-level await, named groups).
    "target": "ES2022",
    "lib": ["ES2022"],

    // [req-1] Do not type-check dependency .d.ts files (incl. node_modules).
    "skipLibCheck": true,

    // Existing settings retained to satisfy [req-3] and [req-4].
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    // [req-4] Test environment globals.
    "types": ["node", "vitest/globals"]
  },
  "exclude": ["coverage", "dist", "docs", "node_modules"],
  "include": ["**/*"]
}
