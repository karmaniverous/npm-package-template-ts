{
  "author": "Jason Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/npm-package-template-ts/issues"
  },
  "description": "A feature-rich npm package template for TypeScript projects.",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.57.0",
    "lefthook": "^1.6.10",
    "release-it": "^17.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/npm-package-template-ts#readme",
  "keywords": [
    "npm",
    "package",
    "template",
    "typescript"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "name": "@karmaniverous/npm-package-template-ts",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run build"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch main"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karmaniverous/npm-package-template-ts"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "lint": "eslint src/**",
    "release": "release-it"
  },
  "type": "module",
  "version": "0.0.1"
}
